# Add option to commands
alias echo="echo -e" # Proper formatted version. 
alias vim="vim -p" # Open files in tabs
# Generic shortcuts
alias ll="ls -l"
alias la="ls -la"
alias lt="ls -lhrt" # List in reverse time order and human-readable size
alias ip3="ipython3"
# Smart date format
alias mydate="date +%Y%m%d_%s"
